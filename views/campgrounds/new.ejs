<%- include("../partials/header.ejs") %>
<div class="container">	
	<div class="row">	
		<h1 style="text-align:center;">
			Create a new NovelCritics!
		</h1>
		<div style="width:30%; margin:25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Name of the Novel, Author Name" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="Rating out of 10" name="price" min="1" max="10"step="1">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Link of Front Page Image of Novel" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Detailed review" name="description">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-block" type = "submit">
				</div>
			</form>
			<a href="/campgrounds">Go back!</a>
		</div>
	</div>
</div>
<%- include("../partials/footer.ejs") %>
